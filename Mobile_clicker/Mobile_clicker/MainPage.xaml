<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mobile_clicker"
             x:Class="Mobile_clicker.MainPage">

    <Grid BackgroundColor="SandyBrown" HorizontalOptions="Center" VerticalOptions="FillAndExpand">
        <StackLayout VerticalOptions="Center" HorizontalOptions="Fill" >
            <Image Source="http://www.pngall.com/wp-content/uploads/2016/07/Cookie-Download-PNG.png" HorizontalOptions="Fill" VerticalOptions="Fill" WidthRequest="500" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Button_Clicked"/>
                </Image.GestureRecognizers>

            </Image>
            <Label x:Name="CookieCounter" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontSize="Large" />
        </StackLayout>

        <Button Text="Shop" Clicked="Shop_Open" VerticalOptions="End" HeightRequest="80" BorderRadius="20" BackgroundColor="Brown"/>
    </Grid>

</ContentPage>
